<div id="messageModal" class="modal">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">{{loc 'core.close'}}</span></button>
				<h4 class="modal-title">{{member.card.name}}</h4>
			</div>
			<div class="modal-body">
				<div class="btn-group btn-group-qty" style="display: table; margin-bottom: 10px; margin-left: auto; margin-right: auto;">
					{{#for 0 member.availableQuantity 1}}
					<label class="btn btn-default" {{#smartIf ../readOnly}}disabled="disabled"{{/smartIf}} data-quantity="{{this}}">{{this}}</label>
					{{/for}}
				</div>
				
				{{#with member.card}}
				<div class="row">
					<div class="col-sm-12 col-md-6 card-info">
						<div class="panel panel-default">
							<div class="panel-heading">
								<h3 class="panel-title">
									<strong>{{name}}</strong>
								</h3>
							</div>
							<div class="panel-body">				
								<span class="key">{{loc 'card.faction'}}:</span>
								<span class="value">{{searchLinkFaction this}}</span>
								<br />
								<span class="key">{{loc 'card.type'}}:</span>
								<span class="value">{{searchLinkType this}}</span>
								<br />
								<span class="key">{{loc 'card.traits'}}:</span>
								<span class="value">{{searchLinkTraits this}}</span>
								<br />
								{{#smartIf cost}}
								<br />
								<span class="key">{{loc 'card.cost'}}:</span>
								<span class="value">{{encodeCost cost}}</span>
								{{/smartIf}}
								{{#if shield}}
								<br />
								<span class="key">{{loc 'card.shieldIcons'}}:</span>
								<span class="value">{{shield}}</span>
								{{/if}}
								{{#if command}}
								<br />
								<span class="key">{{loc 'card.commandIcons'}}:</span>
								<span class="value">{{command}}</span>
								{{/if}}
								{{#smartIf attack}}
								<br />
								<span class="key">{{loc 'card.attack'}}:</span>
								<span class="value">{{attack}}</span>
								{{/smartIf}}
								{{#if hitPoints}}
								<br />
								<span class="key">{{loc 'card.hp'}}:</span>
								<span class="value">{{hitPoints}}</span>
								{{/if}}
								{{#if startingHandSize}}
								<br />
								<span class="key">{{loc 'card.startingHandSize'}}:</span>
								<span class="value">{{startingHandSize}}</span>
								{{/if}}
								{{#if startingResources}}
								<br />
								<span class="key">{{loc 'card.startingResources'}}:</span>
								<span class="value">{{startingResources}}</span>
								{{/if}}
								{{#unless startingHandSize}}
								<br />
								<span class="key">{{loc 'card.unique'}}:</span>				
								<span class="value">{{#if unique}}{{loc 'core.yes'}}{{else}}{{loc 'core.no'}}{{/if}}</span>
								<br />
								<span class="key">{{loc 'card.loyal'}}:</span>				
								<span class="value">{{#if loyal}}{{loc 'core.yes'}}{{else}}{{loc 'core.no'}}{{/if}}</span>		
								<br />
								<span class="key">{{loc 'card.signatureSquad'}}:</span>				
								<span class="value">{{#if warlordId}}{{loc 'core.yes'}}{{else}}{{loc 'core.no'}}{{/if}}</span>
								{{/unless}}								
								<br />							
								<br />
								{{#if text}}{{{htmlText}}}<br/><br/>{{/if}}
								<span class="key">{{loc 'card.set'}}:</span>
								<span class="value">{{searchLinkSetName this}}</span>
								<br />
								<span class="key">{{loc 'card.number'}}:</span>
								<span class="value" style="margin-right: 10px;">{{number}}</span>
								<span class="key">{{loc 'card.quantity'}}:</span>
								<span class="value">{{quantity}}</span>
								{{#if illustrator}}
								<br />
								<span class="key">{{loc 'card.illustrator'}}:</span>
								<span class="value">{{illustrator}}</span>
								{{/if}}
							</div>
						</div>
					</div>
					
					<div class="col-sm-12 col-md-5">
						<img src="{{cardImagePath imageBase}}" class="card-md" />
					</div>														
				</div>
				{{/with}}				
				
			</div>
			<div class="modal-footer">
				<a href="{{cardUrl member.card}}" class="btn btn-default" target="_blank">
					<span class="glyphicon glyphicon-search"></span>&nbsp;{{loc 'core.gotoCardPage'}}
				</a>
				<button type="button" class="btn btn-default" data-dismiss="modal" id="exportCloseButton">
					<span class="glyphicon glyphicon-remove"></span>&nbsp;{{loc 'core.close'}}
				</button>
			</div>
		</div>
	</div>
</div>
